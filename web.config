<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <system.webServer>
    <!-- Set default document -->
    <defaultDocument>
      <files>
        <clear />
        <add value="index.html" />
        <add value="index.htm" />
        <add value="default.html" />
      </files>
    </defaultDocument>

    <rewrite>
      <rules>
        <!-- Don't rewrite parent-api-docs.html -->
        <rule name="API Documentation" stopProcessing="true">
          <match url="^parent-api-docs\.html$" />
          <action type="None" />
        </rule>

        <!-- React Routes - Only rewrite non-backend requests to index.html -->
        <rule name="React Routes" stopProcessing="true">
          <match url=".*" />
          <conditions logicalGrouping="MatchAll">
            <!-- Don't redirect if it's a backend request -->
            <add input="{REQUEST_URI}" pattern="^/backend/" negate="true" />
            <!-- Don't redirect if it's a real file -->
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
            <!-- Don't redirect if it's a real directory -->
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
          </conditions>
          <action type="Rewrite" url="/index.html" />
        </rule>
      </rules>
    </rewrite>
  </system.webServer>
</configuration>
