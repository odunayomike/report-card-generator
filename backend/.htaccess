# Enable Rewrite Engine
RewriteEngine On

# Set the base directory (root for Docker deployment, /backend/ for local)
RewriteBase /

# Force HTTPS (except for localhost development)
RewriteCond %{HTTPS} off
RewriteCond %{HTTP_HOST} !^localhost [NC]
RewriteCond %{HTTP_HOST} !^127\.0\.0\.1 [NC]
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# TEST: Check if .htaccess is working
RewriteRule ^htaccess-test$ test-htaccess.php [L]

# Allow access to temp directory for PDF files
RewriteCond %{REQUEST_URI} ^/temp/.*\.pdf$ [NC]
RewriteRule ^ - [L]

# Allow access to uploads directory
RewriteCond %{REQUEST_URI} ^/uploads/ [NC]
RewriteRule ^ - [L]

# If the request is for a real file or directory, serve it directly
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Route everything else through index.php
RewriteRule ^(.*)$ index.php [QSA,L]
