# Enable Rewrite Engine
RewriteEngine On

# Set the base directory
RewriteBase /backend/

# TEST: Check if .htaccess is working
RewriteRule ^htaccess-test$ test-htaccess.php [L]

# Allow access to temp directory for PDF files
RewriteCond %{REQUEST_URI} ^/backend/temp/.*\.pdf$ [NC]
RewriteRule ^ - [L]

# Allow access to uploads directory
RewriteCond %{REQUEST_URI} ^/backend/uploads/ [NC]
RewriteRule ^ - [L]

# If the request is for a real file or directory, serve it directly
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Route everything else through index.php
RewriteRule ^(.*)$ index.php [QSA,L]

# Set headers for CORS (if not already set in PHP)
<IfModule mod_headers.c>
    Header set Access-Control-Allow-Origin "*"
    Header set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
    Header set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With"
</IfModule>

# Handle preflight OPTIONS requests
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.*)$ $1 [R=200,L]
