<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <system.webServer>
    <rewrite>
      <rules>
        <!-- Allow access to temp directory for PDF files -->
        <rule name="Temp PDF Files" stopProcessing="true">
          <match url="^temp/.*\.pdf$" />
          <action type="None" />
        </rule>

        <!-- Allow access to uploads directory -->
        <rule name="Uploads Directory" stopProcessing="true">
          <match url="^uploads/.*" />
          <action type="None" />
        </rule>

        <!-- Route all other requests through index.php -->
        <rule name="Backend API Router" stopProcessing="true">
          <match url="^(.*)$" />
          <conditions logicalGrouping="MatchAll">
            <!-- Don't rewrite if it's a real file -->
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
            <!-- Don't rewrite if it's a real directory -->
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
          </conditions>
          <action type="Rewrite" url="index.php" appendQueryString="true" />
        </rule>
      </rules>
    </rewrite>

    <!-- CORS Headers -->
    <httpProtocol>
      <customHeaders>
        <add name="Access-Control-Allow-Origin" value="*" />
        <add name="Access-Control-Allow-Methods" value="GET, POST, PUT, DELETE, OPTIONS" />
        <add name="Access-Control-Allow-Headers" value="Content-Type, Authorization, X-Requested-With" />
        <add name="Access-Control-Allow-Credentials" value="true" />
      </customHeaders>
    </httpProtocol>

    <!-- Static Content / MIME Types -->
    <staticContent>
      <remove fileExtension=".pdf" />
      <mimeMap fileExtension=".pdf" mimeType="application/pdf" />
    </staticContent>

    <!-- Security settings to allow PDF downloads -->
    <security>
      <requestFiltering>
        <fileExtensions>
          <remove fileExtension=".pdf" />
          <add fileExtension=".pdf" allowed="true" />
        </fileExtensions>
      </requestFiltering>
    </security>

    <!-- HTTP Response Headers for PDF files -->
    <httpErrors errorMode="Detailed" />

    <!-- Disable output buffering that might corrupt PDFs -->
    <urlCompression doStaticCompression="false" doDynamicCompression="false" />
  </system.webServer>
</configuration>
